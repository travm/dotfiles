" SYNTAX HIGHLIGHTING
syntax on

" LINE NUMBERS
set number

" INDENTATION
set autoindent
set smartindent
set smarttab
set shiftwidth=2
set softtabstop=2
set tabstop=2
set expandtab

filetype plugin on
filetype indent on

" VISUAL TABS & TRAILING SPACES
set list listchars=tab:\ \ ,trail:Â·

" LINE WRAPPING
set nowrap
set linebreak
